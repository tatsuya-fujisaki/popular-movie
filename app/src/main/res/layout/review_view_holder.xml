<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.v7.widget.CardView style="@style/card_view">

        <android.support.constraint.ConstraintLayout style="@style/match_parents">

            <TextView
                android:id="@+id/review_label_text_view"
                style="@style/constraint_layout_child"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                app:layout_constraintBottom_toTopOf="@+id/review_content_text_view"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/review_content_text_view"
                style="@style/constraint_layout_child"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="80dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/review_label_text_view"
                tools:text="@tools:sample/lorem" />

            <TextView
                android:id="@+id/review_url_text_view"
                style="@style/constraint_layout_child"
                android:layout_marginStart="8dp"
                android:layout_marginEnd="8dp"
                android:layout_marginBottom="8dp"
                android:autoLink="web"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/review_content_text_view"
                tools:text="@tools:sample/lorem" />
        </android.support.constraint.ConstraintLayout>
    </android.support.v7.widget.CardView>
</layout>