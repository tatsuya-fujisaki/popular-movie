<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="movie"
            type="com.example.android.popularmovie.room.entity.Movie" />
    </data>

    <android.support.v4.widget.NestedScrollView style="@style/default_layout">

        <LinearLayout
            style="@style/vertical_linear_layout"
            android:paddingTop="@dimen/tab_description_padding_top">

            <android.support.v7.widget.CardView style="@style/card_view">

                <LinearLayout style="@style/padded_vertical_linear_layout">

                    <TextView
                        style="@style/default_layout"
                        android:text="@string/original_title_label"
                        tools:text="@tools:sample/lorem" />

                    <TextView
                        style="@style/overview_descriptions_text_view"
                        android:text="@{movie.originalTitle}"
                        tools:text="@tools:sample/lorem" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/card_view">

                <LinearLayout style="@style/padded_vertical_linear_layout">

                    <TextView
                        style="@style/default_layout"
                        android:text="@string/release_date_label"
                        tools:text="@tools:sample/lorem" />

                    <TextView
                        style="@style/overview_descriptions_text_view"
                        android:text="@{movie.releaseDate}"
                        tools:text="@tools:sample/lorem" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/card_view">

                <LinearLayout style="@style/padded_vertical_linear_layout">

                    <TextView
                        style="@style/default_layout"
                        android:text="@string/vote_average_label"
                        tools:text="@tools:sample/lorem" />

                    <TextView
                        style="@style/overview_descriptions_text_view"
                        android:text="@{movie.voteAverage}"
                        tools:text="@tools:sample/lorem" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/card_view">

                <LinearLayout style="@style/padded_vertical_linear_layout">

                    <TextView
                        style="@style/default_layout"
                        android:text="@string/overview_label"
                        tools:text="@tools:sample/lorem" />

                    <TextView
                        style="@style/overview_descriptions_text_view"
                        android:text="@{movie.overview}"
                        tools:text="@tools:sample/lorem" />
                </LinearLayout>
            </android.support.v7.widget.CardView>
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>