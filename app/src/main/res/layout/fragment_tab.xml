<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="movie"
            type="com.example.android.popularmovie.data.Movie" />
    </data>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/linearlayout_padding_top">

            <android.support.v7.widget.CardView style="@style/cardview">

                <LinearLayout style="@style/cardview_linearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/original_title_label" />

                    <TextView
                        style="@style/textview_for_value"
                        android:text="@{movie.originalTitle}" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/cardview">

                <LinearLayout style="@style/cardview_linearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/release_date_label" />

                    <TextView
                        style="@style/textview_for_value"
                        android:text="@{movie.releaseDate}" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/cardview">

                <LinearLayout style="@style/cardview_linearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/vote_average_label" />

                    <TextView
                        style="@style/textview_for_value"
                        android:text="@{movie.voteAverage}" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView style="@style/cardview">

                <LinearLayout style="@style/cardview_linearlayout">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/overview_label" />

                    <TextView
                        style="@style/textview_for_value"
                        android:text="@{movie.overview}"
                        android:textAppearance="@style/TextAppearance.AppCompat.Body1" />
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recycler_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clipToPadding="false"
                android:numColumns="auto_fit" />
        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>
</layout>