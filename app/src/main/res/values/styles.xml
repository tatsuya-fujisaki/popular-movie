<resources>
    <style name="ThemeWithActionBar" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="ThemeWithoutActionBar" parent="Theme.AppCompat.DayNight.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="default_layout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="match_parents">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="wrap_contents">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <!-- This is to prevent the title of the collapsed toolbar from becoming too small in landscape -->
    <style name="collapsed_title_text_appearance">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="vertical_linear_layout" parent="default_layout">
        <item name="android:orientation">vertical</item>
    </style>

    <style name="padded_vertical_linear_layout" parent="vertical_linear_layout">
        <item name="android:padding">16dp</item>
    </style>

    <style name="default_card_view" parent="CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/card_margin</item>
        <item name="cardElevation">4dp</item>
    </style>

    <style name="default_recycler_view" parent="default_layout">
        <item name="android:clipToPadding">false</item>
        <item name="android:numColumns">auto_fit</item>
    </style>

    <style name="overview_text_view" parent="default_layout">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Title</item>
        <item name="android:layout_marginTop">@dimen/overview_text_view_margin_top</item>
    </style>
</resources>